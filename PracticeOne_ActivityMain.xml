<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.happyleo.android.practiceapp.MainActivity">

    <TextView
        android:id="@+id/paragraphOneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paragraph_one"
        android:textColor="@color/paragraph_1_color"/>

    <TextView
        android:id="@+id/paragraphTwoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paragraph_two"
        android:textColor="@color/paragraph_2_color"
        android:layout_below="@id/paragraphOneTextView"/>

    <TextView
        android:id="@+id/paragraphThreeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paragraph_three"
        android:textColor="@color/paragraph_3_color"
        android:layout_below="@id/paragraphTwoTextView"/>

    <TextView
        android:id="@+id/paragraphFourTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paragraph_four"
        android:textColor="@color/paragraph_4_color"
        android:layout_below="@id/paragraphThreeTextView"/>

    <TextView
        android:id="@+id/paragraphFiveTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paragraph_five"
        android:textColor="@color/paragraph_5_color"
        android:layout_below="@id/paragraphFourTextView"/>

    <Button
        android:id="@+id/changeColorButtonView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="@string/swap_color"
        android:layout_below="@id/paragraphFiveTextView"/>

    <Button
        android:id="@+id/resetButtonView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="@string/reset"
        android:layout_below="@id/changeColorButtonView"/>

</RelativeLayout>
